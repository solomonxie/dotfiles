# Description: Additional configs for zshrc, which aren't good for public.
#
#
#
# ==== ALIAS ====

# Builtin Utils
alias lah="ls -lah"

# Program replacements
alias vim="nvim"

# Config files
alias zshrc="nvim ~/dotfiles/zsh/zshrc"
alias zshrc2="nvim ~/dotfiles/zsh/zshrc.extension"
alias zshrc3="nvim ~/dotfiles/zsh/zshrc.themes"
alias vimrc="nvim ~/.vimrc"
alias tmuxrc="nvim ~/.tmux.conf"
alias bashrc="nvim ~/.bash_profile"

# Shadowsocks proxy
alias proxy='export ALL_PROXY=socks5://127.0.0.1:1080'
alias unproxy='unset ALL_PROXY'
alias ip='curl https://ip.cn'
alias hosts='sudo vim /etc/hosts'

# frequent commands
alias ju="jupyter notebook"
alias repos="cd ~/Workspace/repos"
alias you="youtube-dl"

# Git commands
alias gs="git status"
alias gc="git add . && git commit"
alias gcp="git add . && git commit -m \"Update from $USER\" && git push"

# Tmux
#alias tmux="TERM=screen-256color-bce tmux"

# Python Virtualenv
alias venv2="source ~/virtualenv/venv2/bin/activate"
alias venv3="source ~/virtualenv/venv3/bin/activate"
alias venv-ju="source ~/virtualenv/venv-ju/bin/activate"
